<style type="text/css" media="screen">
#thisPage {
       	background-color: #f0f0f0;
        width: 600px;
        margin-top: 100px;
        margin-left: auto;
				margin-right: auto;
				padding: 25px;
			}

</style>
<div id="wrapper">
<%= render 'layouts/logo' %>
<hr />
<%= render 'layouts/menu' %>
</div><!-- end #wrapper -->

<div id="thisPage">

<h1>Listing users</h1>

<table class = "users">
  <tr>
		<th>Picture</th>
		<th>First Name</th>
    <th>Last Name</th>
    <th>Email</th>
    <th colspan="3">Admin</th>
  </tr>

<% @users.each do |user| %>
	<tr>
		<td><%= gravatar_for user %></td>
    <td><%= user.first_name %></td>
    <td><%= user.last_name %></td>
    <td><%= user.email %></td>
    <td><%= link_to 'Show', user %></td>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New User', new_user_path %>
</div>
