<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN">
<html><head>
  
	<style type="text/css" media="screen">
		#contentArea {
			margin: 0 auto;
			width:960px;
		}

		#moreInfoTip {
			float: left;
			width: 310px;
			margin-top: 25px;
			
		}
		
		#infoSection {
			background-color: #f0f0f0;
			width: 500px;
			margin-top: 100px;
			margin-left: 315px;
			/*
			margin-left: auto;
			margin-right: auto;	
			*/
			padding: 25px;
		}

  </style>
	</head><body>
<div id="wrapper">
<%= render 'layouts/logo' %>
<hr />
<%= render 'layouts/menu' %>
</div><!-- end #wrapper -->
<div id="contentArea">
	<div id="moreInfoTip">
		<%= image_tag "/assets/moreInfoTip.gif", :alt => "We need a little more info." %>
	</div>
	<div id="infoSection">
	<h2>Just a bit more info...</h2>
	<%= form_for(@user_profile) do |f| %>
	<table style="width: 100%; height: 203px;">
	  <tbody>
	    <tr>
		<td style="vertical-align: top;">What do you want to do?<br>
			<%= f.radio_button :want_to, 'startSomething' %> Start something new<br>
			<%= f.radio_button :want_to, 'joinClub' %> Join a club<br>
			<%= f.radio_button :want_to, 'findMentor' %> Find a mentor<br>
			<%= f.radio_button :want_to, 'findJob' %> Find a job<br>
	      </td>
	      <td style="vertical-align: top;">What should someone know about
					you?<br>
					<%= f.text_area :about_me, :size => "35x10" %><br/>
	      </td>
	    </tr>
	    <tr>
	      <td colspan="2" id="buttonRow"><%= f.submit 'Next' %></td>
	    </tr>
	  </tbody>
	</table>
	<% end %>
	</div><!-- end #infoSection -->
</div><!-- end #contentArea -->
<%= render 'layouts/footer' %>
</body></html>
